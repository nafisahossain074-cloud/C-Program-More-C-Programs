#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char name[100];
    printf("Enter your full name: ");
    fgets(name, sizeof(name), stdin);

    for(int i = 0; i < strlen(name); i++) {
        if(i == 0 && name[i] != ' ') {
            printf("%c.", toupper(name[i]));
        } else if(name[i] == ' ' && name[i+1] != ' ' && name[i+1] != '\0') {
            printf("%c.", toupper(name[i+1]));
        }
    }

    printf("\n");
    return 0;
}
